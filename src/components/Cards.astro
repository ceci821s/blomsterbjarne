---
import "../style/global.css";

const {
  variant,
  overskrift,
  oprindelse,
  sollys,
  holdbarhed,
  maal,
  pris,
  oprindelseikon = "oprindelse",
  sollysikon = "sollys",
  holdbarhedikon = "holdbarhed",
  maalikon = "maal",
  prisikon = "pris",
  underoverskrift,
} = Astro.props;
---

<article data-variant={variant}>
  <div class="article_wrapper">
    <div class="billede">
      <div class="arrow">
        <img src="/img/fliparrow_ikon.svg" alt="" />
      </div>
      <img src="/img/abonnement_filler.webp" alt="" />
    </div>

    <div class="overskrift">
      <h4>{overskrift}</h4><div class="card_info">
        <h5>{underoverskrift}</h5>

        <div class="oprindelse">
          <img src={`/img/${oprindelseikon}_ikon.svg`} alt="" />
          <p>{oprindelse}</p>
        </div>
        <div class="sollys">
          <img src={`/img/${sollysikon}_ikon.svg`} alt="" /><p>{sollys}</p>
        </div>
        <div class="holdbarhed">
          <img src={`/img/${holdbarhedikon}_ikon.svg`} alt="" /><p>
            {holdbarhed}
          </p>
        </div>
        <div class="maal">
          <img src={`/img/${maalikon}_ikon.svg`} alt="" /><p>{maal}</p>
        </div>
        <div class="pris">
          <img src={`/img/${prisikon}_ikon.svg`} alt="" /><p>{pris}</p>
        </div>
      </div>
    </div>
  </div>
</article>

<style>
  .article_wrapper {
    border: solid 2px black;
    border-radius: var(--xs-radius);
    width: 155px;
  }
  img {
    width: 155px;
  }
  .overskrift {
    background-color: #ffffff;
    color: black;
    border-top: 2px solid black;
    text-align: center;
    font-size: var(--h5-mobile);
    font-family: var(--other-headings);
  }
  .card_info img {
    display: none;
  }

  .arrow img {
    width: 20px;
    height: 20px;
  }
  .arrow {
    display: grid;
    justify-content: end;
  }
  h5 {
    display: none;
  }

  /* DESKTOP */

  @media (min-width: 900px) {
    .article_wrapper,
    img {
      width: 452px;
    }
    .overskrift {
      font-size: var(--h5-desktop);
    }
  }
  /* flipped card blomster */
  [data-variant="card_sortiment_flipped"] .article_wrapper {
    width: 280px;
  }
  [data-variant="card_sortiment_flipped"] .billede {
    display: none;
  }
  [data-variant="card_sortiment_flipped"] .card_info {
    display: block;
    text-align: start;
  }

  [data-variant="card_sortiment_flipped"] .card_info img {
    display: block;
    width: 30px;
    height: 30px;
  }
  [data-variant="card_sortiment_flipped"] .overskrift {
    border: none;
    padding-top: var(--m-spacing-mobile);
    padding-bottom: var(--l-spacing-mobile);
  }
  [data-variant="card_sortiment_flipped"] .maal {
    display: none;
  }
  [data-variant="card_sortiment_flipped"] .maal,
  [data-variant="card_sortiment_flipped"] .oprindelse,
  [data-variant="card_sortiment_flipped"] .sollys,
  [data-variant="card_sortiment_flipped"] .holdbarhed,
  [data-variant="card_sortiment_flipped"] .pris {
    padding-right: var(--xs-spacing-mobile);
    padding-bottom: var(--xs-spacing-mobile);
  }

  /* DESKTOP */

  @media (min-width: 900px) {
    [data-variant="card_sortiment_flipped"] .article_wrapper {
      width: 452px;
    }
  }
  /* flipped card vaser */
  [data-variant="card_sortiment_flipped_vaser"] .article_wrapper {
    width: 280px;
  }
  [data-variant="card_sortiment_flipped_vaser"] .billede {
    display: none;
  }
  [data-variant="card_sortiment_flipped_vaser"] .card_info {
    display: block;
    text-align: start;
  }

  [data-variant="card_sortiment_flipped_vaser"] .card_info img {
    display: block;
    width: 30px;
    height: 30px;
  }
  [data-variant="card_sortiment_flipped_vaser"] .overskrift {
    border: none;
    padding-top: var(--m-spacing-mobile);
    padding-bottom: var(--l-spacing-mobile);
  }
  h5 {
    display: block;
  }
  [data-variant="card_sortiment_flipped_vaser"] .maal {
    display: block;
    padding-right: var(--xs-spacing-mobile);
    padding-bottom: var(--xs-spacing-mobile);
  }
  [data-variant="card_sortiment_flipped_vaser"] .oprindelse,
  [data-variant="card_sortiment_flipped_vaser"] .sollys,
  [data-variant="card_sortiment_flipped_vaser"] .holdbarhed {
    display: none;
    padding-right: var(--xs-spacing-mobile);
    padding-bottom: var(--xs-spacing-mobile);
  }

  /* DESKTOP */

  @media (min-width: 900px) {
    [data-variant="card_sortiment_flipped_vaser"] .article_wrapper {
      width: 452px;
    }
  }

  /* Card forside */
  [data-variant="card_forside"] .article_wrapper {
    width: 280px;
  }
  [data-variant="card_forside"] img {
    width: 280px;
  }
  [data-variant="card_forside"] .arrow img {
    width: 25px;
    height: 25px;
  }

  /* DESKTOP */

  @media (min-width: 900px) {
    [data-variant="card_forside"] .article_wrapper,
    [data-variant="card_forside"] img {
      width: 452px;
    }
  }
  /* Card forside flipped */
  [data-variant="card_forside_flipped"] .article_wrapper {
    width: 330px;
  }
  [data-variant="card_forside_flipped"] .billede {
    display: none;
  }
  [data-variant="card_forside_flipped"] .card_info {
    display: block;
    text-align: start;
  }

  [data-variant="card_forside_flipped"] .card_info img {
    display: block;
    width: 30px;
    height: 30px;
  }
  [data-variant="card_forside_flipped"] .overskrift {
    border: none;
  }
  [data-variant="card_forside_flipped"] .maal {
    display: none;
  }
  /* DESKTOP */

  @media (min-width: 900px) {
    [data-variant="card_forside_flipped"] .article_wrapper {
      width: 452px;
    }
  }
</style>
