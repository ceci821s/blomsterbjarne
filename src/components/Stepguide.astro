---
import "../style/global.css";
import ProgressBarCard from "../components/Progress_bar_card.astro";
const {
  variant,
  overskrift,
  tekst,
  icon = "blomst",
  progress_variant = "progress_bar_card_step_1",
} = Astro.props;
---

<article data-variant={variant}>
  <div class="ikon">
    <img src={`/img/${icon}_ikon.svg`} alt="" />
  </div>
  <div class="info">
    <div><h4>{overskrift}</h4></div>
    <div>
      <p>{tekst}</p>
    </div>
  </div>
  <div class="progress">
    <ProgressBarCard>{progress_variant}</ProgressBarCard>
  </div>
</article>

<style>
  article {
    background-color: var(--regnorm-100);
    border: 2px solid black;
    width: 312px;
    height: 438px;
  }
  .ikon {
    display: grid;
    justify-content: center;
  }
  img {
    width: 100px;
    height: 100px;
  }

  h4 {
    font-family: var(--other-headings);
    font-size: var(--h4-mobile);
  }
  p {
    font-family: var(--font-body);
    font-size: var(--body-mobile);
  }
  .progress {
    position: relative;
    top: 42%;
    left: 11%;
    /* hvis position ikke dur senere: */
    /* display: grid;
    place-content: center; */
  }

  [data-variant="stepguide_desktop"] {
    display: flex;
    width: 550px;
    height: 300px;
  }
  [data-variant="stepguide_desktop"] .ikon {
    display: flex;
    place-items: center;
  }
  [data-variant="stepguide_desktop"] img {
    width: 100px;
    height: 100px;
  }
  [data-variant="stepguide_desktop"] h4 {
    font-size: var(--h4-desktop);
  }
  [data-variant="stepguide_desktop"] p {
    font-size: var(--body-desktop);
  }
  [data-variant="stepguide_desktop"] .progress {
    display: none;
  }
</style>
